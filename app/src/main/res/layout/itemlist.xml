<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/bgtodolist"
    android:layout_marginBottom="20dp"
    android:layout_height="100dp"


    >

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        >


        <TextView
            android:id="@+id/titleplan"
            android:layout_marginTop="19dp"
            android:textSize="22sp"
            android:textColor="#000C5D"
            android:text="Buy whiskas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/descplan"
            android:textSize="18sp"
            android:textColor="#293d3d"
            android:layout_marginTop="8dp"
            android:text="Nearly market good to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/dateplan"
            android:textSize="18sp"
            android:textColor="#e43f5a"
            android:layout_marginTop="8dp"
            android:text="Tomorrow"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
